# ========================
# Environment Variables Template
# ========================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!

# ========================
# Database Configuration
# ========================
DB_CONNECTION_STRING=Server=your-mysql-server;Port=3306;Database=bnote;User=your-user;Password=your-password;SslMode=Required

# ========================
# JWT Configuration
# ========================
# IMPORTANT: Use a strong secret key (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_KEY=your-super-secret-key-min-32-characters-long-change-this-in-production
JWT_ISSUER=ProjectManagementAPI
JWT_AUDIENCE=ProjectManagementClient
JWT_EXPIRATION_HOURS=24

# ========================
# API Ports
# ========================
PROJECT_MANAGEMENT_PORT=5268
UTILITY_SERVICE_PORT=5269

# ========================
# SMTP Configuration (for UtilityService)
# ========================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@boversal.com
SMTP_FROM_NAME=Boversal

# ========================
# AWS S3 Configuration (for file upload)
# ========================
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET_NAME=boversal-uploads

# ========================
# Application Settings
# ========================
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:8080
